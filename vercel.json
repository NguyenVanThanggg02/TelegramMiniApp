{
    "images": {
      "sizes": [256, 640, 1080, 2048, 3840],
      "remotePatterns": [
        {
          "protocol": "https",
          "hostname": "telegram-mini-app-psi.vercel.app",
          "pathname": "/**"
        }
      ],
      "minimumCacheTTL": 60,
      "formats": ["image/webp"],
      "dangerouslyAllowSVG": false,
      "contentSecurityPolicy": "script-src 'none'; frame-src 'none'; sandbox; allow-downloads",
      "contentDispositionType": "inline"
    },
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "sandbox allow-downloads allow-scripts; script-src 'self'; object-src 'none';"
          }
        ]
      }
    ]
  }
  